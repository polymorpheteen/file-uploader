<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
</head>

<body>
    <h1>Hello, <%= user.name %>
    </h1>
    <a href="logout">Logout</a>

    <main>
        <% if (parentFolderId) { %>
            <a href="/dashboard/<%= parentFolderId %>">Back to Parent</a>
            <% } else { %>
                <!-- Optionally, show "Home" link if there's no parent folder (i.e., it's the root) -->
                <a href="/dashboard">Back to Home</a>
                <% } %>

                    <form action="/folders" method="post" style="margin: 1rem 0;">
                        <input type="text" name="name" placeholder="New Folder Name" required />

                        <input type="hidden" name="parentId" value="<%= currentFolder ? currentFolder.id : '' %>" />

                        <button type="submit">New Folder</button>
                    </form>

                    <form action="/upload" method="post" enctype="multipart/form-data"
                        style="display: inline-block; margin-left: 1rem;">
                        <input type="file" name="files" multiple webkitdirectory directory />

                        <input type="hidden" name="parentId" value="<%= currentFolder ? currentFolder.id : '' %>" />

                        <button type="submit">Upload</button>
                    </form>

                    <table border="1" cellpadding="6">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Type</th>
                                <th>Size</th>
                                <th>Actions</th>
                            </tr>
                        </thead>

                        <tbody>
                            <% if (items.length> 0) { %>
                                <% items.forEach(item=> { %>
                                    <tr>
                                        <!-- Name -->
                                        <td>
                                            <% if (item.type==="folder" ) { %>
                                                üìÅ
                                                <a href="/dashboard/<%= item.id %>">
                                                    <%= item.name %>
                                                </a>
                                                <% } else { %>
                                                    üìÑ <%= item.name %>
                                                        <% } %>
                                        </td>

                                        <!-- Type -->
                                        <td>
                                            <%= item.type %>
                                        </td>

                                        <!-- Size -->
                                        <td>
                                            <% if (item.type==="file" ) { %>
                                                <% let size=item.size; let displaySize; if (size < 1024) {
                                                    displaySize=size + " B" ; } else if (size < 1024 * 1024) {
                                                    displaySize=(size / 1024).toFixed(1) + " KB" ; } else {
                                                    displaySize=(size / (1024 * 1024)).toFixed(1) + " MB" ; } %>
                                                    <%= displaySize %>
                                                        <% } %>
                                        </td>

                                        <!-- Actions -->
                                        <td>
                                            <% if (item.type==="folder" ) { %>
                                                <form action="/folders/<%= item.id %>?_method=PATCH" method="POST"
                                                    style="display:inline;">
                                                    <input type="text" name="name" value="<%= item.name %>" required />
                                                    <button type="submit">Rename</button>
                                                </form>

                                                <form action="/folders/<%= item.id %>?_method=DELETE" method="POST"
                                                    style="display:inline">
                                                    <button type="submit"
                                                        onclick="return confirm('Delete this folder?')">Delete</button>
                                                </form>
                                                <% } else { %>
                                                    <button onclick="showFileInfo('<%= item.id %>')">Info</button>

                                                    <form action="/files/<%= item.id %>?_method=DELETE" method="POST"
                                                        style="display:inline">
                                                        <button type="submit"
                                                            onclick="return confirm('Delete this file?')">Delete</button>
                                                    </form>
                                                    <% } %>
                                        </td>
                                    </tr>
                                    <% }) %>
                                        <% } else { %>
                                            <tr>
                                                <td colspan="4">This folder is empty</td>
                                            </tr>
                                            <% } %>
                        </tbody>
                    </table>
                    <div id="fileInfoModal"
                        style="display:none; position:fixed; top:20%; left:50%; transform:translateX(-50%); background:#fff; border:1px solid #ccc; padding:1rem; box-shadow:0 4px 10px rgba(0,0,0,0.2); ">

                        <h3>File Information</h3>
                        <div id="fileInfoContent"></div>
                        <button onclick="closeFileInfo()">Close</button>
                    </div>

    </main>

    <script>
        async function showFileInfo(fileId) {
            const res = await fetch(`/files/${fileId}/info`, {
                headers: {
                    "Accept": "application/json"
                }
            });

            if (!res.ok) {
                alert("Could not load file info");
                return;
            }

            const file = await res.json();

            document.getElementById("fileInfoContent").innerHTML = `
            <p><strong>Name:</strong> ${file.name}</p>
            <p><strong>Type:</strong> ${file.mimeType}</p>
            <p><strong>Size:</strong> ${formatSize(file.size)}</p>
            <p><strong>Uploaded:</strong> ${new Date(file.createdAt).toLocaleString()}</p>
        `;

            document.getElementById("fileInfoModal").style.display = "block";
        }

        function closeFileInfo() {
            document.getElementById("fileInfoModal").style.display = "none";
        }

        function formatSize(bytes) {
            if (bytes < 1024) return bytes + " B";
            if (bytes < 1024 * 1024) return (bytes / 1024).toFixed(1) + " KB";
            return (bytes / (1024 * 1024)).toFixed(1) + " MB";
        }
    </script>


</body>

</html>